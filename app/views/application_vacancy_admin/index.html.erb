<h1><%= @vacancy.name %> <span class="badge bg-secondary">Candidatura: <%= @application_vacancy.id %></span></h1>
<hr>

<div class="row">
  <div class="col-md-4">
    <div class="card">
     <% if @vacancy.cover.attached? && @vacancy.cover.attachment.blob.present? && @vacancy.cover.attachment.blob.persisted? %>
        <%= image_tag(@vacancy.cover, class: "") %>
      <% else %>
        <%= image_tag 'unavailable.png' %>
      <% end %>
    </div>
  </div>

  <div class="col-md-8">
    <label for="">Cidade/Estado</label>
    <input type="text" class="form-control" value="<%= @vacancy.city.name %> - <%= @vacancy.city.state.name %>" readonly>

    <label for="">Título</label>
    <input type="text" class="form-control" value="<%= @vacancy.name %>" readonly>

    <label for="">Categoria</label>
    <input type="text" class="form-control" value="<%= @vacancy.category.name %>" readonly>

    <label for="">Faixa Salarial</label>
    <input type="text" class="form-control" value="<%= real(@vacancy.salary) %>" readonly>
  </div>
</div>

<label for="">Descrição</label>
<textarea class="form-control" rows="10" readonly><%= @vacancy.content %></textarea>

<br>
<div class="documentation">Documentação</div>
<hr>

<div class="row">
  <div class="col-md-6">
    <br>
    <% if @application_vacancy.curriculum.attached? && @application_vacancy.curriculum.attachment.blob.present? && @application_vacancy.curriculum.attachment.blob.persisted? %>
      <p>Currículo</p>
      <%= image_tag(@application_vacancy.curriculum) %>
    <% end %>
  </div>
  <div class="col-md-6">
    <br>
    <p>Documentos</p>
    <% @application_vacancy.documents.each do |document| %>
      <%= image_tag(document, width: "400px") %>
    <% end %>
  </div>
</div>