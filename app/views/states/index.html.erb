<p id="notice"><%= notice %></p>

<h1>Estados (<%= @states.count %>)</h1>

<%= link_to 'Cadastrar Estado', new_state_path, class: "btn btn-primary" %>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td>
          <%= link_to 'Ver', state, class: "btn btn-primary" %> | <%= link_to 'Editar', edit_state_path(state), class: "btn btn-warning" %> | <%= link_to 'Apagar', state, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Estado', new_state_path, class: "btn btn-primary" %>
