<h1>Vaga: <span class="badge bg-secondary"><%= @vacancy.name %></span></h1>
<hr>

<div class="row">
  <div class="col-md-12">
    <label for="">Cidade/Estado</label>
    <input type="text" class="form-control" value="<%= @vacancy.city.name %> - <%= @vacancy.city.state.name %>" readonly>

    <label for="">Título</label>
    <input type="text" class="form-control" value="<%= @vacancy.name %>" readonly>

    <label for="">Categoria</label>
    <input type="text" class="form-control" value="<%= @vacancy.category.name %>" readonly>

    <label for="">Faixa Salarial</label>
    <input type="text" class="form-control" value="<%= real(@vacancy.salary) %>" readonly>
  </div>
</div>

<label for="">Descrição</label>
<textarea class="form-control" rows="10" readonly><%= @vacancy.content %></textarea>

<% if user_signed_in? then %>
  <br>
  <% if @registered.present? then %>
    <div class="alert alert-primary" role="alert">
      Voce já se candidatou para essa vaga! <b><%= link_to 'Ver Minha Candidatura', application_vacancy_id_path(@registered.id) %>
    </div>
  <% else %>
    <%= link_to 'Candidatar-se', apply_to_vacancy_path(@vacancy.id, current_user.id), class: "btn btn-primary" %>
  <% end %>
<% else %>
  <br>
  <%= link_to 'Criar conta para Candidatar-se nesta Vaga', new_user_registration_path, class: "btn btn-primary" %>
<% end %>